<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/holo_blue_light</item>
    </style>

    <!-- Style for a list item -->
    <style name="ListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:textColor">@color/itemTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:background">@drawable/ocean_background</item>
    </style>

    <!-- Style for a TextView -->
    <style name="TextViewInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/text_view_info_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/app_view_distance</item>
        <item name="android:layout_marginRight">@dimen/app_view_distance</item>
    </style>

    <!-- Style for a TextView (Info about activity) -->
    <style name="InfoText" parent="TextViewInfoStyle">
        <item name="android:alpha">0.5</item>
        <item name="android:padding">@dimen/app_view_distance</item>
        <item name="android:textColor">@color/infoTextColor</item>
    </style>

    <!-- Style for a Button -->
    <style name="ButtonBottomCenter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/app_view_distance</item>
        <item name="android:paddingLeft">@dimen/app_view_distance</item>
        <item name="android:paddingRight">@dimen/app_view_distance</item>
    </style>

    <!-- Style for a Button go to "Now Playing" -->
    <style name="ButtonGoToNowPlaying" parent="ButtonBottomCenter">
        <item name="android:text">@string/button_now_playing</item>
    </style>

    <!-- Style for a Media Player Button -->
    <style name="MediaPlayerButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/media_player_button_margin</item>
        <item name="android:layout_marginRight">@dimen/media_player_button_margin</item>
        <item name="android:background">@color/mediaPleyerButton</item>
    </style>

</resources>
