<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundArtist"
    tools:context=".ArtistActivity">

    <TextView
        android:id="@+id/text_view_artist_band_activity_about"
        style="@style/InfoText"
        android:background="@color/infoArtist"
        android:text="@string/text_view_artist_band_info" />

    <Button
        android:id="@+id/button_activity_artist_to_now_playing"
        style="@style/ButtonGoToNowPlaying" />

    <ListView
        android:id="@+id/listview_artists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_activity_artist_to_now_playing"
        android:layout_below="@id/text_view_artist_band_activity_about"
        android:layout_margin="@dimen/app_view_distance"
        android:alpha="0.8"
        android:background="@android:color/white" />

</RelativeLayout>
